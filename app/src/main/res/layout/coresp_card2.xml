<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView android:layout_width="84dp" android:layout_height="84dp" android:id="@+id/imageView4"
                   android:src="@drawable/arriver" android:layout_gravity="center"/>
        <LinearLayout
                android:orientation="vertical"  android:gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/gare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="8dp"
                    android:paddingBottom="20dp"
                    android:textSize="16sp"
                    android:text="test"
                    android:textStyle="bold" />
            <TextView android:id="@+id/heure" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:layout_centerVertical="true"
                      android:layout_alignParentLeft="true" android:paddingLeft="8dp" android:paddingBottom="20dp"
                      android:textSize="16sp" android:text="test" android:textStyle="bold"/>
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Large Text"
                android:id="@+id/garenew" android:layout_gravity="center|right"/>
    </LinearLayout>


</RelativeLayout>