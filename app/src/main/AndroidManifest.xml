    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MaterialDrawerTheme.TranslucentStatus">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Materials.SearchTrainActivity"
                  android:theme="@style/MaterialDrawerTheme.ActionBar">

        </activity>
        <activity android:name=".Navigation.LoginDialog"
                  android:theme="@style/MaterialDrawerTheme.TranslucentStatus">
        </activity>
        <activity android:name=".ResultatActivity"
                  android:theme="@style/MaterialDrawerTheme.ActionBar">

        </activity>
        <activity android:name=".Materials.DealItent"
                               android:theme="@style/MaterialDrawerTheme.ActionBar">

    </activity>
    </application>

</manifest>
